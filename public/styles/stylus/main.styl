*
  font-family: 'Play', sans-serif;
body
  background #777
  color lightblue

h1
  font-size 32px

input
  color #555

input:focus
  outline 0

button:focus
  outline 0

.entry-input
  background #fff
  border none
  border-radius 5px 0 0 5px
  color #777
  height 32px
  padding-left 10px
  font-size 1.2em


.submit-button
  background lightblue
  border none
  border-radius 0 5px 5px 0
  border-left 1px solid #777
  font-size 15px
  color #777
  display inline-block
  height 32px
  top -1px
  position relative
  padding 5px

.submit-button:hover
  background #777
  color lightblue
  border 1px solid lightblue
  box-sizing border-box
  top 0px
  margin-bottom 1px

.submit-button:active
  top 1px

.entry
  background white
  color #555
  display inline-block
  width 30%
  height 30px
  margin-top 15px
  border-radius 10px
  padding-top 5px
  padding-left 10px

input[type=checkbox]
  display none

.delete-item
  color #fff
  font-size 27px
  background tomato
  display inline-block
  border none
  border-radius 6px
  width 30px
  height 30px
  padding 2px
  margin-left 4px
  top 7px

.delete-item:hover
  cursor pointer
  color tomato
  background #fff

.delete-item:active
  top 9px

.choose
  background tomato
  color #fff
  margin-top 15px

.choose:hover
  background #777
  color tomato
  border 1px solid tomato

.choose:focus
  outline 0

.the-choice
  background white
  color #555
  border-radius 10px
  width 60%

.active-false
  text-decoration line-through
  background tomato
  color white

.dropdown-menu
  top: -9px
  border-radius 10px
  border none
  padding-left 7px
